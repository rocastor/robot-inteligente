name = "Run Robot AI API Server"
author = 42046066
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload --log-level info"

[[ports]]
localPort = 5000
externalPort = 80
